    </div>
    <div class="portlet-body form">
        <!-- BEGIN FORM-->
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">Email Address</label>
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email Address" })
                        </div>
                        <span class="help-block">
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </span>
                    </div>
                </div>
                <div class="form-group last">
                    <label class="control-label col-md-3">Nom</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "Prènom" })
                        <span class="help-block">
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                        </span>
                    </div>
                </div>
                <div class="form-group last">
                    <label class="control-label col-md-3">Nom</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Nom" })
                        <span class="help-block">
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        </span>
                    </div>
                </div>               
                <div class="form-group last password-strength">
                    <label class="control-label col-md-3">Mot de Passe</label>
                    <div class="col-md-4">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "password_strength", @placeholder = "Mot de Passe" })
                        <span class="help-block">
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Confirmation</label>
                    <div class="col-md-4">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirmation" })
                        <span class="help-block">
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </span>
                    </div>
                </div>

            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn red">Enregistrer</button>
                        <button type="reset" class="btn default">Annuler</button>
                    </div>
                </div>
            </div>
        }
        <!-- END FORM-->
    </div>
</div>












