@model IEnumerable<Omni.Agence.DAL.Concierge>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Conciérges";
    ViewBag.PD = "start active open";
    ViewBag.PDC = "active";
    ViewBag.PDCS = "selected";
}
@section Styles {
    @Styles.Render("~/Content/DataTableM")
}


<h3 class="page-title">
    Concierge <small>Liste</small >
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Home")">Accueil</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <i class="fa fa-user"></i>
            <a href="@Url.Action("Index")">Concierge</a>
            <i class="fa fa-angle-right"></i>
        </li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box blue-madison">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Tous les concierges
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>

                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                        </div>

                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="sample_3">
                    <thead>
                        <tr>
                            <th></th>
                            <th>
                                Nom Prénom
                            </th>
                            <th>
                                CIN
                            </th>
                            <th>
                                Salaire
                            </th>

                            <th>
                                Téléphone
                            </th>
                            <th>Immeuble</th>


                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomConci) @Html.DisplayFor(modelItem => item.PrenomConci)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.CinConci)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.SalaireConci)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.TelConci)
                                </td>
                                <td>
                                    @if (item.Immeubles.Count() > 0)
                                    {
                                        @Html.DisplayFor(modelItem => item.Immeubles.First().NomImmeuble)
                                    }
                                </td>
                                <td>

                                    <a href="@Url.Action( "Edit", new { id = item.NumConcierge }) " class="btn default btn-xs blue-madison tooltips" data-placement="bottom" data-original-title="Modifier Concierge">
                                        <i class="fa fa-edit"></i>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
@section Scripts {
    @Scripts.Render("~/bundles/DataTableM")
    <script>
        jQuery(document).ready(function () {
            TableManaged.init();
        });
    </script>
}








