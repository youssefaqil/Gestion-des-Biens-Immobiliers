@model IEnumerable<Omni.Agence.DAL.Immeuble>

@{
    ViewBag.Title = "Liste des immeubles";
    ViewBag.PL1 = "start active open";
    ViewBag.PLI = "active";
    ViewBag.PL3 = "selected";
}


<h3 class="page-title">
    Immeuble <small>Liste</small>
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Home")">Accueil</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <i class="fa fa-building"></i><a href="@Url.Action("Index")">Immeuble</a>
            <i class="fa fa-angle-right"></i>
        </li>

    </ul>

</div>

<div class="row">
    <div class="col-md-12">
        <div class="portlet box purple-intense">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Table des immeubles
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>

                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="@Url.Action("Create")" class="btn purple-intense tooltips" data-placement="bottom" data-original-title="Nouveau Immeuble">
                                    <i class="fa fa-plus"></i>
                                </a>
                                <br />
                            </div>
                        </div>

                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered" id="sample_editable_2">
                    <thead>
                        <tr>
                            <th>
                                Code Immeuble
                            </th>
                            <th>
                                Nom Immeuble
                            </th>
                            <th>
                                Nbr d'étages
                            </th>

                            <th>
                                Ville
                            </th>
                            <th>
                                Quartier
                            </th>

                            <th>
                                Propriétaire
                            </th>

                            <th></th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RefCodeImm)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomImmeuble)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NbrEtage)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Adresse.Ville)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Adresse.quartier)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Personne.nom) @Html.DisplayFor(modelItem => item.Personne.prenom)
                                </td>

                                <td>

                                    <a href="@Url.Action("Details", new { id = item.CodeImmeuble }) " class="btn default btn-xs purple-intense tooltips" data-placement="left" data-original-title="Modifier Immeuble">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.CodeImmeuble })" class="btn default btn-xs black  tooltips" data-placement="left" data-original-title="Supprimer Immeuble">
                                        <i class="fa fa-trash-o"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>


                </table>


            </div>


        </div>
    </div>
</div>