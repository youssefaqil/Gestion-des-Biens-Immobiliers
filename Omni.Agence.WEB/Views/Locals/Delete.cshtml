@model Omni.Agence.DAL.Local

@{
    ViewBag.Title = "Delete";
    ViewBag.PL1 = "start active open";
    ViewBag.PLL = "active";
    ViewBag.PL3 = "selected";
}


<h3 class="page-title">
    Local <small>Suppression d'un local</small>
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Home")">Accueil</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <i class="fa fa-user"></i>
            <a href="@Url.Action("Index")">Local</a>
            <i class="fa fa-angle-right"></i>
        </li>

    </ul>

</div>

<h2>Suppression</h2>

<h3>Voulez vous vraiment supprimer le local @Html.DisplayFor(model => model.TitreLocal) ?!</h3>
<div>

    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-lg red" />

            <a href="@Url.Action("Index")" class="btn btn-lg default">
                Retour
            </a>
        </div>
    }
</div>