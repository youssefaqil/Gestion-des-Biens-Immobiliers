@model IEnumerable<Omni.Agence.DAL.Personne>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Locataire";
    ViewBag.C = "start active open";
    ViewBag.CGL = "active";
    ViewBag.CC = "selected";
}
@section Styles { 
    @Styles.Render("~/Content/DataTableM")
}
<h3 class="page-title">
    Locataire <small>Liste</small>
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index","Home")">Accueil</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <i class="fa fa-user"></i>
            <a href="@Url.Action("Index")">Locataires</a>
        </li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box grey-cascade">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Locataires
                </div>
                <ul class="nav nav-tabs">

                    <li>
                        <a href="#portlet_tab2" data-toggle="tab">
                            Entreprise
                        </a>
                    </li>
                    <li class="active">
                        <a href="#portlet_tab1" data-toggle="tab">
                            Personne
                        </a>
                    </li>
                </ul>
            </div>
            <div class="portlet-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="portlet_tab1">
                        <div class="btn-group">
                            <a href="@Url.Action("CreatePersonne")" class="btn grey-cascade tooltips" data-placement="bottom" data-original-title="Nouveau Prpriétaire">
                                <i class="fa fa-plus"></i>
                            </a>
                            <br />
                            <br />
                            <br />
                        </div>
                        <table class="table table-striped table-bordered table-hover" id="sample_2">
                            <thead>
                                <tr>
                                    <th>Code locataire</th>                                    
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.nom) @Html.DisplayNameFor(model => model.prenom)  
                                    </th>*@
                                    <th>
                                        Nom Prénom
                                    </th>
                                    <th>
                                        Identifiant
                                    </th>
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.employeur) Employeur
                                    </th>*@
                                    <th>
                                        Employeur
                                    </th>
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.activite) Activité 
                                    </th>*@
                                    <th>
                                        Activité
                                    </th>
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.fonction) Fonction
                                    </th>*@
                                    <th>
                                        Fonction
                                    </th>
                                    <th>
                                        Mobile
                                    </th>

                                    @*<th>
                                        @Html.DisplayNameFor(model => model.EmailPers)
                                    </th>*@
                                    
                                    <th>
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (string.IsNullOrEmpty(item.rc))
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RefCodePers)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.nom) @Html.DisplayFor(modelItem => item.prenom)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.cin): @Html.DisplayFor(modelItem => item.carteSejour)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.employeur)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.activite)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.fonction)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.TelMobilPers)
                                            </td>

                                            @*<td>
                                                @Html.DisplayFor(modelItem => item.EmailPers)
                                            </td>*@
                                            
                                            <td>
                                                @*@Html.ActionLink("Details", "Details", new { id = item.CodePers })*@
                                                <a href="@Url.Action( "Details", new { id = item.CodePers }) " 
                                                class="btn default btn-xs grey-cascade tooltips"
                                                 data-placement="bottom" data-original-title="Détails Propriétaire">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                @*<a href="@Url.Action( "Delete", new { id = item.CodePers })" class="btn default btn-xs black tooltips" data-placement="bottom" data-original-title="Supprimer Prpriétaire">
                                                    <i class="fa fa-trash-o"></i>
                                                </a>*@

                                                @*@Html.ActionLink("Supprimer", "Delete", new { id = item.CodePers })*@
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane" id="portlet_tab2">
                        <div class="btn-group">
                            <a href="@Url.Action("CreateEntreprise")" class="btn grey-cascade tooltips" data-placement="bottom" data-original-title="Nouvelle Entreprise">
                                <i class="fa fa-plus"></i>
                            </a>
                            <br />
                            <br />
                            <br />
                        </div>
                        <table class="table table-striped table-bordered table-hover" id="sample_3">
                            <thead>
                                <tr>
                                    <th>
                                        Code locataire
                                    </th>
                                    <th>
                                        Nom
                                    </th>
                                    <th>
                                        RC
                                    </th>
                                    <th>
                                        Activité
                                    </th>

                                    <th>
                                        Fixe
                                    </th>
                                    <th>
                                        Conseiller(e)
                                    </th>
                                   
                                    <th>
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (!string.IsNullOrEmpty(item.rc))
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RefCodePers)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.employeur)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.rc)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.activite)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.TelFixPers)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.nom) @Html.DisplayFor(modelItem => item.prenom)
                                            </td>

                                            @*<td>
                                                @Html.DisplayFor(modelItem => item.EmailPers)
                                            </td>*@

                                           
                                            <td>

                                                @*@Html.ActionLink("Details", "Details", new { id = item.CodePers })*@

                                                <a href="@Url.Action("Details", new { id = item.CodePers }) " class="btn default btn-xs grey-cascade tooltips" data-placement="bottom" data-original-title="Détails Propriétaire">
                                                    <i class="fa fa-edit"></i>
                                                </a>

                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/DataTableM")
        <script>
            jQuery(document).ready(function () {
                TableManaged.init();
            });
        </script>
    }
